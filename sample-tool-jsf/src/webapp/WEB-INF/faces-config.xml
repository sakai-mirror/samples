<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
	"-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
	"http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

	<application>
		<message-bundle>sample-tool-jsf</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
	</application>

	<managed-bean>
		<description>JSF Sample tool UI controller bean</description>
		<managed-bean-name>JsfSampleBean</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.sample.JsfSampleBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>

		<from-view-id>*</from-view-id>

		<navigation-case>
			<from-outcome>main</from-outcome>
			<to-view-id>/sample/main.jsp</to-view-id>
			<redirect/>
		</navigation-case>

		<navigation-case>
			<from-outcome>list</from-outcome>
			<to-view-id>/sample/list.jsp</to-view-id>
			<redirect/>
		</navigation-case>

	</navigation-rule>

	<managed-bean>
		<description>
			Dynamic Resource Bundle Loader
		</description>
		<managed-bean-name>msgs</managed-bean-name>
		<managed-bean-class>org.sakaiproject.util.ResourceLoader</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>baseName</property-name>
		<value>sample-tool-jsf</value>
		</managed-property>
	</managed-bean>

</faces-config>
